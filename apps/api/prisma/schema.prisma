generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  OWNER
  ADMIN
  STAFF
}

enum TenantStatus {
  ACTIVE
  SUSPENDED
}

enum StoreStatus {
  ACTIVE
  DISABLED
}

enum ProductStatus {
  ACTIVE
  ARCHIVED
}

enum OrderStatus {
  CREATED
  PENDING_PAYMENT
  PAID
  FULFILLED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  EXPIRED
}

enum CartStatus {
  ACTIVE
  CHECKED_OUT
  ABANDONED
}

enum ChannelType {
  WEB
  TELEGRAM
  WHATSAPP
}

model Tenant {
  id        String       @id @default(uuid())
  name      String
  status    TenantStatus @default(ACTIVE)
  createdAt DateTime     @default(now())
  users     User[]
  stores    Store[]
}

model User {
  id           String    @id @default(uuid())
  tenantId     String
  email        String    @unique
  passwordHash String
  role         UserRole  @default(OWNER)
  status       String    @default("ACTIVE")
  createdAt    DateTime  @default(now())
  tenant       Tenant    @relation(fields: [tenantId], references: [id])
  refreshTokens RefreshToken[]
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  tokenHash String
  expiresAt DateTime
  revokedAt DateTime?
  user      User     @relation(fields: [userId], references: [id])
}

model Store {
  id        String      @id @default(uuid())
  tenantId  String
  name      String
  slug      String      @unique
  status    StoreStatus @default(ACTIVE)
  timezone  String      @default("Asia/Jakarta")
  currency  String      @default("IDR")
  createdAt DateTime    @default(now())
  tenant    Tenant      @relation(fields: [tenantId], references: [id])
  telegramBots StoreChannelTelegram[]
  whatsappChannels StoreChannelWhatsApp[]
  categories Category[]
  products  Product[]
  carts     Cart[]
  orders    Order[]
}

model StoreChannelTelegram {
  id         String   @id @default(uuid())
  tenantId   String
  storeId    String
  botToken   String
  botUsername String?
  status     String   @default("ACTIVE")
  createdAt  DateTime @default(now())
  store      Store    @relation(fields: [storeId], references: [id])
}

model StoreChannelWhatsApp {
  id              String   @id @default(uuid())
  tenantId        String
  storeId         String
  phoneNumberId   String
  accessToken     String
  webhookVerifyToken String
  status          String   @default("ACTIVE")
  createdAt       DateTime @default(now())
  store           Store    @relation(fields: [storeId], references: [id])
}

model Category {
  id        String   @id @default(uuid())
  tenantId  String
  storeId   String
  name      String
  slug      String
  store     Store    @relation(fields: [storeId], references: [id])
  products  Product[]
}

model Product {
  id          String        @id @default(uuid())
  tenantId    String
  storeId     String
  categoryId  String?
  name        String
  slug        String
  description String?
  status      ProductStatus @default(ACTIVE)
  createdAt   DateTime      @default(now())
  store       Store         @relation(fields: [storeId], references: [id])
  category    Category?     @relation(fields: [categoryId], references: [id])
  images      ProductImage[]
  inventory   Inventory?
  prices      Price[]
  orderItems  OrderItem[]
  cartItems   CartItem[]
}

model ProductImage {
  id        String   @id @default(uuid())
  tenantId  String
  productId String
  url       String
  sortOrder Int      @default(0)
  product   Product  @relation(fields: [productId], references: [id])
}

model Inventory {
  id              String   @id @default(uuid())
  tenantId        String
  productId       String   @unique
  sku             String
  stockQty        Int      @default(0)
  lowStockThreshold Int    @default(5)
  product         Product  @relation(fields: [productId], references: [id])
}

model Price {
  id        String   @id @default(uuid())
  tenantId  String
  productId String
  currency  String
  amount    Int
  product   Product  @relation(fields: [productId], references: [id])
}

model Cart {
  id        String     @id @default(uuid())
  tenantId  String
  storeId   String
  channel   ChannelType
  status    CartStatus @default(ACTIVE)
  createdAt DateTime   @default(now())
  store     Store      @relation(fields: [storeId], references: [id])
  items     CartItem[]
}

model CartItem {
  id        String   @id @default(uuid())
  tenantId  String
  cartId    String
  productId String
  qty       Int
  priceAtAdd Int
  cart      Cart     @relation(fields: [cartId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])
}

model Order {
  id          String      @id @default(uuid())
  tenantId    String
  storeId     String
  userId      String?
  channel     ChannelType
  status      OrderStatus @default(CREATED)
  totalAmount Int
  currency    String
  createdAt   DateTime    @default(now())
  store       Store       @relation(fields: [storeId], references: [id])
  items       OrderItem[]
  payment     Payment?
}

model OrderItem {
  id          String   @id @default(uuid())
  tenantId    String
  orderId     String
  productId   String
  qty         Int
  priceAtOrder Int
  order       Order    @relation(fields: [orderId], references: [id])
  product     Product  @relation(fields: [productId], references: [id])
}

model Payment {
  id          String        @id @default(uuid())
  tenantId    String
  orderId     String        @unique
  providerCode String
  status      PaymentStatus @default(PENDING)
  invoiceId   String?
  rawResponse Json?
  createdAt   DateTime      @default(now())
  order       Order         @relation(fields: [orderId], references: [id])
}

model PaymentProvider {
  id        String   @id @default(uuid())
  code      String   @unique
  isEnabled Boolean  @default(true)
  config    Json?
}

model WebhookEvent {
  id          String   @id @default(uuid())
  providerCode String
  eventId     String   @unique
  payload     Json
  processedAt DateTime?
  createdAt   DateTime @default(now())
}

model IdempotencyKey {
  id        String   @id @default(uuid())
  tenantId  String
  key       String   @unique
  createdAt DateTime @default(now())
}
